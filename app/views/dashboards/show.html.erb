<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Dashboard for <i><%= current_user.username %></i></h1>
  <br>

  <h2>My Lessons</h2>
  <% if current_user.lessons.empty? %>
    <p><i>You haven't created any lessons yet. <%= link_to 'Create', new_teacher_lesson_path %> one.</i></p>
  <% end %>

  <ul>
    <% current_user.lessons.each do |lesson| %>
      <li><%= link_to lesson.title, teacher_lesson_path(lesson) %>: <%= lesson.description %>
        <%= link_to 'Lesson Admin', teacher_lesson_path(lesson), class: 'btn btn-primary btn-sm' %> &nbsp
        <%= link_to 'Delete Lesson', teacher_lesson_path(lesson), 
            method: :delete,
            data: { confirm: 'ATTENTION: You are about to permanently delete this lesson and all of its words. Are you sure?' },
            class: 'btn btn-danger btn-sm' %>      
      </li>
      <br>
    <% end %>
  </ul>

  <hr>

  <h2>Lessons You Are Enrolled In</h2>
  <ul>
    <% current_user.enrolled_lessons.each do |lesson| %>
    <li>
      <%= link_to lesson.title, lesson_path(lesson) %>: <%= lesson.description %>
    </li>
    <br>
  <% end %>
  </ul>
</div>

<br class="clear">
<br>