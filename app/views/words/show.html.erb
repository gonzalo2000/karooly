<br>

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= current_word.term %></h1><br>

  <%= image_tag(current_word.image, class: 'img-responsive') %><br>

  <p class="text-center">(means <i><%= current_word.reference %></i>)</p><br>

  <div class="text-center">
    <%= audio_tag current_word.sound, autoplay: true, class: "audio-play" %>
    <button type="button" class="btn btn-default btn-lg audio-button">
      <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
    </button>
  </div>

  <br>

  <!-- link buttons for previou or next word -->
  <div class="text-center">
    <% if current_word.previous && current_word.previous.lesson_id == current_word.lesson.id %>
      <%= link_to current_word.previous do %>
        <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>
      <% end %>
      &nbsp
    <% end %>

    <% if current_word.next && current_word.next.lesson_id == current_word.lesson.id %>
      <%= link_to current_word.next do %>
        <span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span>
      <% end %>
    <% end %>
  </div>
  <!-- end prev/next buttons -->
  
  <br>

  <div class="text-center"><%= link_to 'Back to Lesson', lesson_path(current_word.lesson), class: 'btn btn-primary' %></div>
</div>

<br class="clear">
<br>