<% content_for :title, "Lessons" %>

<br>

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">All Lessons</h1>
  <hr>
  <% @lessons.each do |lesson| %>
    <% unless lesson.words.empty? %>
      <h2><%= link_to lesson.title, lesson_path(lesson) %></h2>
      <span class="text-warning">by <%= lesson.user.username %> (<%= lesson.subject %>, Level <%= lesson.difficulty %>)</span>
      <br>
      <span class="text-success">Description: <%= lesson.description %></span><br>
      <%= link_to 'View Lesson', lesson_path(lesson), class: 'btn btn-primary view-button' %>
      <br><br>
    <% end %>
  <% end %>

  <br>
  <%= will_paginate @lessons, class: 'flickr_pagination' %>
  <br>

  <div class="text-center">
    <%= social_share_button_tag("Learn languages at Karooly!") %>
  </div>
</div>

<br class="clear">
<br>