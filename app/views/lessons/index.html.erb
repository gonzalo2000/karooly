<br>

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Learn New Vocabulary!</h1>
  <hr>

  <% @lessons.each do |lesson| %>
    <h2><%= lesson.title %></h2>
    <br>
    <div class="col-xs-12">
      <i>by ###USER### (<%= lesson.subject %>, Level <%= lesson.difficulty %>)</i>
    </div>
    <br>
    <div class="col-xs-12 col-sm-8">
      <%= lesson.description %>
    </div>
    <div class="col-xs-12 col-sm-4 text-center">
      <%= link_to 'Button', '#', class: 'btn btn-primary btn-lg' %>
    </div>
    <br class="clear">
  <% end %>
</div>