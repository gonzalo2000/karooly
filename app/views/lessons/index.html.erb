<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Learn New Vocabulary!</h1>
  <hr>

  <% @lessons.each do |lesson| %>
    <h2><%= link_to lesson.title, lesson_path(lesson) %></h2>
    <div class="col-xs-12">
      <i>by <%= lesson.user.username %> (<%= lesson.subject %>, Level <%= lesson.difficulty %>)</i>
    </div>
    
    <br>
    <br>

    <div class="col-xs-12 col-sm-8">
      <%= lesson.description %>
    </div>
    <div class="col-xs-12 col-sm-4 text-center">
      <%= link_to 'View Lesson', lesson_path(lesson), class: 'btn btn-primary' %>
    </div>
    <br class="clear">
    <br>
  <% end %>

  <br>

  <%= will_paginate @lessons, class: 'flickr_pagination' %>
</div>

<br class="clear">
<br>