<br>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>New Lesson</h1>

  <br>

  <%= simple_form_for @lesson, url: teacher_lessons_path do |f| %>
    <%= f.input :title %><br>
    <%= f.input :description %><br>
    <%= f.input :subject, :label => "Language", :collection => ['Spanish', 'English', 'French', 'German', 'Latin', 'Chinese', 'Russian'], :selected => "Spanish" %><br>
    <%= f.input :difficulty, :label => "Difficulty", :collection => [1,2,3,4,5], :selected => 1 %><br><br>
    <%= f.submit "Create Lesson", class: 'btn btn-primary' %>
  <% end %>
  <br>
</div>

