<% content_for :title, "Edit Lesson" %>

<br>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Edit Your Lesson</h1>

  <br>

  <%= simple_form_for @lesson, url: teacher_lesson_path(@lesson), method: :patch do |f| %>
    <%= f.input :title %><br>
    <%= f.input :description %><br>
    <%= f.input :subject, :label => "Choose language", :collection => ['Spanish', 'English', 'French', 'German', 'Latin', 'Chinese', 'Russian'] %><br>
    <%= f.input :difficulty, :label => "Choose difficulty", :collection => [1,2,3,4,5,6] %><br><br>
    <%= f.submit "Update", class: 'btn btn-primary' %>
  <% end %>
  <br>
  <%= link_to 'Back', teacher_lesson_path(@lesson), class: 'btn btn-primary'  %>
</div>

<br class="clear">
<br>