<br>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Edit Your Lesson</h1>

  <br>

  <%= simple_form_for @lesson, url: teacher_lesson_path do |f| %>
    <%= f.input :title %><br>
    <%= f.input :description %><br>
    <%= f.input :subject %><br>
    <%= f.input :difficulty %>
    <br>
    <%= f.submit "Update", class: 'btn btn-primary' %>
  <% end %>
  <br>
</div>

