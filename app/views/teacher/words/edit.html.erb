<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Edit Word</h1>
  <%= simple_form_for @word, url: teacher_lesson_word_path(current_lesson, @word) do |f| %>
    <%= f.input :term %><br>
    <%= f.input :reference %><br>
    <%= f.input :image, input_html: { accept: "image/gif, image/jpeg, image/jpg, image/png" } %><br>
    <%= f.input :sound %>
    <br>
    <%= f.submit "Update", class: 'btn btn-primary btn-large' %>
  <% end %>

  <br>

  <%= link_to 'Back', teacher_lesson_path(current_lesson), class: 'btn btn-primary' %>
</div>