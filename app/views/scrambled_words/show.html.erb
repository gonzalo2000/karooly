<% content_for :title, "Unscramble" %>

<h1 class="text-center">2: Word Unscramble</h1>
<br>

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <br>
  
  <h2 class="text-center">
    <% scrambled_word_array.each do |character| %>
      <div class="boxed-letter"><%= character %></div>
    <% end %>
  </h2>

  <br>

  <%= image_tag(@word.image, class: 'img-responsive') %><br>

  <br>

  <!-- Testing form -->
  <%= simple_form_for @word, url: lesson_scrambled_word_path(current_lesson, @word.word), method: :patch do |f| %>
    <%= f.input :unscrambled_attempt, label: "Unscramble the above term:" %><br>
    <%= f.button :submit, "Submit", class: 'btn btn-primary' %>
  <% end %>

</div>

<br class="clear">
<br>