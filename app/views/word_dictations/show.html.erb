<% content_for :title, "Dictation" %>

<h1 class="text-center">3: Dictation</h1>
<br>

<div class="booyah-box col-xs-10 col-xs-offset-1">
  
  <br>

  <div class="text-center">
    <%= audio_tag @word.sound, autoplay: true, class: "audio-play" %>
    <button type="button" class="btn btn-default btn-lg audio-button text-center">
      <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
    </button>
  </div>

  <br>

  <!-- Testing form -->
  <%= simple_form_for @word, url: lesson_word_dictation_path(current_lesson, @word.word), method: :patch do |f| %>
    <%= f.input :dictation_attempt, label: "Spell the sound:" %><br>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>

</div>

<br class="clear">
<br>