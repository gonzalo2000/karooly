<h1 class="text-center">3: Dictation</h1>
<br>

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h2 class="text-center">
    <% @word.term %>
  </h2>

  <br>

  <%= image_tag(@word.image, class: 'img-responsive') %><br>

  <br>

  <!-- Testing form -->
  <%= simple_form_for @word, url: lesson_word_dictation_path(current_lesson, @word.word), method: :patch do |f| %>
    <%= f.input :dictation_attempt, label: "Spell the sound:" %><br>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>

</div>

<br class="clear">
<br>